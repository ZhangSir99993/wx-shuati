<!--pages/demo/demo.wxml-->
<view bindtap='swiperchange' style="background:red;width100px;height50px;">
  点击
</view>

<view class="custom-dots">
    <block wx:for="{{customDots}}" wx:key="{{index}}">
        <block wx:if="{{bannerCurrent!=index}}">
            <text style="width:12rpx;height:12rpx;margin: 0 8rpx;border-radius: 6rpx;background: #666666;"></text>
        </block>
        <block wx:else>
            <text style="width:24rpx;height:12rpx;margin: 0 8rpx;border-radius: 6rpx;background: #666666;"></text>
        </block>
    </block>
</view>

<scroll-view scroll-y bindscroll='scroll' style='height:300px;width:100vw;'>
    <view wx:for="{{customDots}}" wx:key="index">
        <view style='width:100%;height:100px;'>{{index}}</view>
    </view>
</scroll-view>